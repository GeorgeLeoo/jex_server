doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/layui/css/layui.css')
    link(rel='stylesheet', href='/stylesheets/login.css')
    script(src="/layui/layui.js")
  body
    div(class='login-wrapper')
        div(class='layui-col-md1 layui-col-md-offset5')
            div(class='login-content')
                h1(class='login-title') 后端平台开发
                form(class="layui-form", action="")
                    div(class="layui-form-item")
                        label(class="layui-form-label")账号
                        div(class="layui-input-block")
                            input(type="text",name="title",lay-verify="title",
                                autocomplete="off",placeholder="请输入账号",class="layui-input")
                    div(class="layui-form-item")
                        label(class="layui-form-label")密码
                        div(class="layui-input-block")
                            input(type="password",name="password",lay-verify="pass",
                                autocomplete="off",placeholder="请输入密码",class="layui-input")
                            
                    div(class="layui-form-item")
                        div(class="layui-input-block")
                            button(type="button",class="layui-btn layui-btn-fluid")登录
                            